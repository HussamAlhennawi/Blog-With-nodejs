<%- include('../partials/upper') %>

<div class="flex justify-center items-center font-primary h-screen">

    <div class="bg-gray-200 w-4/5 p-3 overflow-hidden shadow-2xl">
        <div class="text-center font-bold text-xl">
            <h3 class="border-b-2 border-gray-300 pb-2 pt-3">Edit your Blog !!!</h3>
        </div>
        <div class="mt-3.5 h-5">
        </div>
        <div class="flex justify-center items-center mt-5">
            <form id="EditBlogForm" action="/blogs/<%= blog.id%>?_method=PUT" method="post" class="w-full">
                <div class="mb-4 w-2/3">
                    <label class="block mb-2" for="title">&nbsp;&nbsp;&nbsp;Blog title:</label>
                    <input class="border-primary border-2 rounded-2xl p-2 focus:outline-0  w-full" type="text"
                           id="title"
                           name="title"
                           value="<%= blog.title %>"
                    <% if (typeof oldValues !== "undefined" && oldValues.title) { %>
                           value="<%= oldValues.title %>"
                            <% } %>
                    >

                    <% if (typeof errors !== "undefined" && errors.title) { %>
                        <div class="titleErrorSection text-rose-700 text-start font-bold text-base">
                            <svg class="w-7 h-7 inline-block" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24"
                                 stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"/>
                            </svg>
                            <div class="inline-block" id="titleError"><%= errors.title %></div>
                        </div>
                    <% } %>
                </div>


                <div class="my-4 w-11/12">
                    <label class="block" for="body">&nbsp;&nbsp;&nbsp;Blog body:</label>
                    <textarea class="border-primary border-2 rounded-2xl p-2 focus:outline-0 w-full" rows="7"
                              id="body" name="body"><%= blog.body %></textarea>

                    <% if (typeof errors !== "undefined" && errors.body) { %>
                        <div class="titleErrorSection text-rose-700 text-start font-bold text-base">
                            <svg class="w-7 h-7 inline-block" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24"
                                 stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"/>
                            </svg>
                            <div class="inline-block" id="titleError"><%= errors.body %></div>
                        </div>
                    <% } %>
                </div>
                <div class="text-center mt-5">
                    <button class="px-3 pt-3 pb-2 mx-1 inline-block rounded-full uppercase text-base font-bold bg-blue-500 text-white"
                            type="submit">Update
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>
</body>
</html>
